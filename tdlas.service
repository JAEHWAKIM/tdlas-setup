[Unit]
Description=TDLAS Service
After=network.target syslog.service mariadb.service

[Service]
Type=simple
WorkingDirectory=/opt/tdlas
ExecStart=/opt/tdlas/tdlas
KillSignal=SIGINT
SendSIGKILL=no
Restart=on-failure
RestartSec=5s
StandardOutput=tty
TTYPath=/dev/tty2

[Install]
WantedBy=multi-user.target 
